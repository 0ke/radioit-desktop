@import "window.styl"

md-select:not([disabled]):focus
    .md-select-label
        color inherit !important

md-select
    @extend *[no-drag]
    padding 0
    .md-select-label
        &.md-placeholder
            color inherit !important
    +md-progress-circular
        transform scale(0.45) !important

// left panel
.left-pane
    border-right 1px solid rgba(0,0,0,0.12)

#weekday-list
    md-list-item
        color $LIGHT_GREY
        &.active
        &:hover
            color $LIGHT_BLACK
            p
                font-weight 600 !important

// bangumi list
.bangumi-list-wrapper
    h5
        padding-left 20px

// bangumi detail
.bangumi-detail-list
    md-list-item
        min-height 0
        padding 0
        margin 20px 0
    md-icon
        margin 0 !important
        webkit-user-select none
    p
    pre
        line-height 24px
        margin 0 0 0 15px
    p
        img
            vertical-align middle

// settings
#settings-area
    @extend .content-high